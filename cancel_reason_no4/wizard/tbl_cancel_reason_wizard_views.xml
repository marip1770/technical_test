<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_tbl_cancel_reason_wizard" model="ir.ui.view">
        <field name="name">tbl_cancel_reason_wizard.form</field>
        <field name="model">tbl_cancel_reason_wizard</field>
        <field name="arch" type="xml">
            <form string="Cancel Reason">
                <group>
                    <field name="cancel_reason_id"/>
                </group>
                <footer>
                    <button string="Confirm" type="object" name="confirm_cancel" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
